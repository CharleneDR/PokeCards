<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link rel="icon" href="{{ asset('build/images/pokeball_filled.png') }}">
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>
	<body class="w-100 d-flex flex-column align-items-center" style="background-image: url('{{ asset('build/images/wallpaper.jpg') }}')">
		{% include "_navbar.html.twig" %}

		{% if is_granted('ROLE_ADMIN') %}
			{% include "_adminLink.html.twig" %}
		{% endif %}

		{% for category, messages in app.flashes %}
			{% for message in messages %}
				<div class="alert alert-{{ category }}">
					{{ message }}
				</div>
			{% endfor %}
		{% endfor %}

		{% block body %}{% endblock %}
		<div id="topButtonDiv" class="d-flex justify-content-center align-items-center">
			<a href="#nav"><img id="topButton" class="pb-1" src="{{ asset('build/images/topButton.png') }}"></a>
		</div>
	</body>
</html>
